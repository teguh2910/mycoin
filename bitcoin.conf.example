# server=1
# listen=1
# txindex=1
# rpcuser=mycoinrpc
# rpcpassword=strongpassword
# rpcallowip=127.0.0.1
# dbcache=2048

# ===== Mining Node (Private Network) =====
# server=1
# gen=1
# genproclimit=2
# txindex=1
# rpcuser=mycoinrpc
# rpcpassword=strongpassword

# ===== Lightweight Node (Pruned) =====
# server=1
# prune=5000
# rpcuser=mycoinrpc
# rpcpassword=strongpassword
# dbcache=512

# ===== Block Explorer Backend =====
# server=1
# txindex=1
# rpcuser=mycoinrpc
# rpcpassword=strongpassword
# rpcallowip=127.0.0.1
# rpcbind=127.0.0.1
# dbcache=4096
# maxmempool=500

# ===== Testing/Development (Regtest) =====
# regtest=1
# server=1
# rpcuser=test
# rpcpassword=test
# rpcallowip=127.0.0.1

##############################################################################
## Security Notes
##############################################################################

# 1. Always use strong rpcpassword (minimum 20 random characters)
# 2. Only allow RPC from trusted IPs
# 3. Use firewall rules to protect ports
# 4. Keep your wallet encrypted
# 5. Backup your wallet.dat regularly
# 6. Never share your private keys or seed phrases

